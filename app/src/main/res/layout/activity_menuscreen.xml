<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.perchtech.humraz.blind.menuscreen"
    android:background="#ff94ccf5"
    android:onClick="listenButtonOnClick">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="listenButtonOnClick">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"

            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="75dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <com.skyfishjy.library.RippleBackground
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"
                    app:rb_color="#0099CC"
                    app:rb_radius="32dp"
                    app:rb_rippleAmount="4"
                    app:rb_duration="3000"
                    app:rb_scale="6"
                    android:layout_gravity="center_horizontal">

            <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/imageVieww"
            android:onClick="listenButtonOnClick"

            android:background="@drawable/robot"
                android:layout_gravity="center_horizontal" />
                </com.skyfishjy.library.RippleBackground>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Touch Top Portion To Speak"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="15dp"
                android:layout_marginLeft="5dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/resultTextView"
            android:layout_gravity="center_horizontal"
            android:text="Response Here."
            android:onClick="listenButtonOnClick"
            android:padding="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="140dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Books"
            android:id="@+id/button1"
            android:onClick="book"
            android:background="#ff36a9f5" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CALC"
            android:layout_marginLeft="5dp"
            android:id="@+id/button2"
            android:onClick="calc"
            android:background="#ff36a9f5"

            android:layout_marginRight="5dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="OCR"
            android:id="@+id/button3"
            android:nestedScrollingEnabled="false"
            android:onClick="recognition"
            android:layout_marginRight="5dp"
            android:background="#ff36a9f5" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="LIB"
            android:layout_marginRight="5dp"
            android:id="@+id/button4"
            android:nestedScrollingEnabled="false"
            android:onClick="LIB"
            android:background="#ff36a9f5" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TEACH"
            android:layout_marginRight="5dp"
            android:id="@+id/button5"
            android:nestedScrollingEnabled="false"
            android:onClick="teach"
            android:background="#ff36a9f5" />


    </LinearLayout>



</LinearLayout>
